# ===========================================
# DATABASE (Supabase PostgreSQL)
# ===========================================
# Get these from: https://supabase.com/dashboard/project/[project-id]/settings/database
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# ===========================================
# AUTHENTICATION (NextAuth.js)
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (optional - for "Sign in with Google")
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===========================================
# AI SERVICES
# ===========================================
# Anthropic Claude API
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key-here"

# OpenAI API (for Cash Flow AI features)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# ===========================================
# STRIPE BILLING
# ===========================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Price IDs (create these in Stripe dashboard)
STRIPE_PRICE_WEBSITE_MANAGEMENT="price_website_management"
STRIPE_PRICE_CYBERSECURITY="price_cybersecurity"
STRIPE_PRICE_CHAUFFEUR="price_chauffeur"
STRIPE_PRICE_CASHFLOW_AI="price_cashflow_ai"

# ===========================================
# MONITORING & ERROR TRACKING
# ===========================================
# Sentry - https://sentry.io
SENTRY_DSN="https://[key]@[org].ingest.sentry.io/[project-id]"
SENTRY_AUTH_TOKEN="sntrys_your-auth-token"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="simple-growth-solutions"

# ===========================================
# EMAIL (Resend)
# ===========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_your-resend-api-key"
EMAIL_FROM="Simple Growth Solutions <noreply@yourdomain.com>"

# ===========================================
# RATE LIMITING (Upstash Redis)
# ===========================================
# Get from: https://console.upstash.com
UPSTASH_REDIS_REST_URL="https://[instance].upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# ===========================================
# ACCOUNTING INTEGRATIONS
# ===========================================
# QuickBooks Integration (OAuth)
QUICKBOOKS_CLIENT_ID="your-quickbooks-client-id"
QUICKBOOKS_CLIENT_SECRET="your-quickbooks-client-secret"
QUICKBOOKS_REDIRECT_URI="http://localhost:3000/api/integrations/quickbooks/callback"

# Xero Integration (OAuth)
XERO_CLIENT_ID="your-xero-client-id"
XERO_CLIENT_SECRET="your-xero-client-secret"
XERO_REDIRECT_URI="http://localhost:3000/api/integrations/xero/callback"

# FreshBooks Integration (OAuth)
FRESHBOOKS_CLIENT_ID="your-freshbooks-client-id"
FRESHBOOKS_CLIENT_SECRET="your-freshbooks-client-secret"

# ===========================================
# POS INTEGRATIONS
# ===========================================
# Square Integration
SQUARE_ACCESS_TOKEN="your-square-access-token"
SQUARE_ENVIRONMENT="sandbox"

# ===========================================
# APP CONFIGURATION
# ===========================================
# Base URL for the application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Feature flags (optional)
ENABLE_AI_FEATURES="true"
ENABLE_ANALYTICS="true"
